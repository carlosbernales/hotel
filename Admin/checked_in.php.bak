        const nights = parseInt($('#numberOfNights').val());
        const priceDifference = (newPrice - currentPrice) * nights;
        
        // Validate payment if additional payment is required
        if (priceDifference > 0) {
            const paymentMethod = $('#paymentMethod').val();
            if (!paymentMethod) {
                Swal.fire({
                    icon: 'error',
                    title: 'Payment Method Required',
                    text: 'Please select a payment method for the additional charge'
                });
                return false;
            }
            
            if (paymentMethod === 'Cash') {
                const cashAmount = parseFloat($('#cashAmount').val()) || 0;
                if (cashAmount < priceDifference) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Insufficient Amount',
                        text: 'Please enter an amount equal to or greater than the additional charge required'
                    });
                    return false;
                }
            }
        }
        
        // Prepare confirmation message
        let confirmationMessage = 'Are you sure you want to proceed with the room transfer?';
        if (priceDifference > 0) {
            confirmationMessage += `\nAdditional payment of ₱${priceDifference.toFixed(2)} is required.`;
        } else if (priceDifference < 0) {
            confirmationMessage += '\nNote: The price difference is non-refundable as per our policy.';
        }

        // Confirm the transfer
        Swal.fire({
            title: 'Confirm Room Transfer',
            html: `
                <div class="text-left">
                    <p>${confirmationMessage}</p>
                    <p><strong>Transfer Reason:</strong> ${$('#transferReason').val()}</p>
                </div>
            `,
            icon: 'question',
