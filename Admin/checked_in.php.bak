<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>

<script>
$(document).ready(function() {
    // Initialize DataTable with scrolling
    $('#bookingsTable').DataTable({
        "pageLength": 10,
        "scrollX": true,
        "scrollCollapse": true,
        "columnDefs": [
            {
                "targets": -1,
                "orderable": false
            }
        ],
        "dom": '<"top"lf>rt<"bottom"ip><"clear">',
        "language": {
            "search": "Search bookings:",
            "lengthMenu": "Show _MENU_ bookings per page",
            "info": "Showing _START_ to _END_ of _TOTAL_ bookings",
            "infoEmpty": "No bookings available",
            "infoFiltered": "(filtered from _MAX_ total bookings)"
        }
    });

    // Adjust table columns on window resize
    $(window).on('resize', function() {
        $('#bookingsTable').DataTable().columns.adjust();
    });

    // Function to view event details
    function viewEventDetails(eventId) {
        $.ajax({
            url: 'get_event_details.php',
            type: 'POST',
            data: { event_id: eventId },
            success: function(response) {
                $('#eventDetailsModal .modal-content').html(response);
                $('#eventDetailsModal').modal('show');
            },
            error: function(xhr, status, error) {
                alert('Error loading event details: ' + error);
            }
        });
    }

    // Function to view room details
    function viewRoomDetails(bookingId) {
        $.ajax({
            url: 'get_room_details.php',
            type: 'POST',
            data: { booking_id: bookingId },
            success: function(response) {
                $('#roomDetailsModal .modal-content').html(response);
                $('#roomDetailsModal').modal('show');
            },
            error: function(xhr, status, error) {
                alert('Error loading room details: ' + error);
            }
        });
    }

    // Initialize tooltips
    $('[data-toggle="tooltip"]').tooltip();

    // Regular Check-out Button Handler
    $('.checkout-btn').on('click', function(e) {
        e.preventDefault();
        const bookingId = $(this).data('id');
        const guestName = $(this).data('guest');
        const totalAmount = parseFloat($(this).data('amount'));
        const amountPaid = parseFloat($(this).data('paid'));
        const remainingBalance = totalAmount - amountPaid;
        
        // Populate the checkout modal
        $('#checkoutBookingId').val(bookingId);
        $('#checkoutGuestName').val(guestName);
        $('#checkoutTotalAmount').val('₱' + totalAmount.toFixed(2));
        $('#checkoutPaidAmount').val('₱' + amountPaid.toFixed(2));
        $('#checkoutRemainingBalance').val('₱' + remainingBalance.toFixed(2));
        
        // Show/hide payment method section based on remaining balance
        if (remainingBalance > 0) {
            $('#remainingPaymentSection').show();
            $('#checkoutPaymentMethod').prop('required', true);
        } else {
            $('#remainingPaymentSection').hide();
            $('#checkoutPaymentMethod').prop('required', false);
        }
        
        // Show the checkout modal
        $('#checkoutModal').modal('show');
    });

    // Handle checkout form submission
    $('#checkoutForm').on('submit', function(e) {
        e.preventDefault();
        
        const bookingId = $('#checkoutBookingId').val();
        const guestName = $('#checkoutGuestName').val();
        const remainingBalance = parseFloat($('#checkoutRemainingBalance').val().replace('₱', '').replace(/,/g, ''));
        const paymentMethod = $('#checkoutPaymentMethod').val();

        // Validate payment method if there's remaining balance
        if (remainingBalance > 0 && !paymentMethod) {
            Swal.fire({
                title: 'Payment Method Required',
                text: 'Please select a payment method for the remaining balance.',
                icon: 'warning',
                confirmButtonColor: '#3085d6'
            });
            return;
        }

        Swal.fire({
            title: 'Confirm Check Out',
            html: `
                <div class="text-center">
                    <p>Are you sure you want to check out:</p>
                    <strong>${guestName}</strong>?
                    ${remainingBalance > 0 ? `<p class="mt-2">Remaining Balance: ₱${remainingBalance.toFixed(2)}</p>
                    <p>Payment Method: ${paymentMethod}</p>` : ''}
                </div>
            `,
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Yes, Check Out',
            cancelButtonText: 'Cancel',
            confirmButtonColor: '#28a745',
            cancelButtonColor: '#6c757d'
        }).then((result) => {
            if (result.isConfirmed) {
                // Show loading state
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...');

                // Process checkout
                $.ajax({
                    url: 'update_booking_status.php',
                    type: 'POST',
                    data: {
                        booking_id: bookingId,
                        action: 'checkout',
                        payment_method: paymentMethod,
                        remaining_balance: remainingBalance
                    },
                    dataType: 'json',
                    success: function(response) {
                        console.log('Checkout response:', response);
                        
                        if (response.success) {
                            $('#checkoutModal').modal('hide');
                            Swal.fire({
                                title: 'Check-out Successful!',
                                html: `
                                    <div class="text-center">
                                        <i class="fas fa-check-circle text-success" style="font-size: 48px;"></i>
                                        <p class="mt-3">${guestName} has been checked out.</p>
                                        ${remainingBalance > 0 ? `<p class="mt-2">Final Payment: ₱${remainingBalance.toFixed(2)}</p>
                                        <p>Payment Method: ${paymentMethod}</p>` : ''}
                                        <div class="mt-2">
                                            <small>Thank you for staying at Casa Estela!</small>
                                        </div>
                                    </div>
                                `,
                                icon: 'success',
                                confirmButtonText: 'OK',
                                confirmButtonColor: '#28a745'
                            }).then(() => {
                                window.location.href = response.redirect || 'checked_out.php';
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: response.message || 'Failed to process check-out',
                                icon: 'error',
                                confirmButtonColor: '#dc3545'
                            });
                            submitBtn.prop('disabled', false).text('Confirm Check Out');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('AJAX Error:', status, error);
                        console.error('Response:', xhr.responseText);
                        
                        // Try to parse error message from response
                        let errorMessage = 'Failed to process check-out';
                        try {
                            const response = JSON.parse(xhr.responseText);
                            errorMessage = response.message || errorMessage;
                            console.log('Error details:', response);
                        } catch (e) {
                            console.error('Failed to parse error response:', e);
                        }
                        
                        Swal.fire({
                            title: 'Error!',
                            text: errorMessage,
                            icon: 'error',
                            confirmButtonColor: '#dc3545'
                        });
                        submitBtn.prop('disabled', false).text('Confirm Check Out');
                    }
                });
            }
        });
    });

    // Early Check-out Button Handler
    $('.early-checkout-btn').on('click', function(e) {
        e.preventDefault();
        const bookingId = $(this).data('id');
        const row = $(this).closest('tr');
        const cells = row.find('td');

        // Get guest name from the row
        const guestName = cells.eq(1).text().trim();

        // Get dates from the table cells - this gets the CURRENT check-in and check-out dates
        // For extended stays, this will correctly read the extended checkout date, not the original
        const checkInDate = new Date(cells.eq(4).text().trim());
        const currentCheckOutDate = new Date(cells.eq(5).text().trim());
        const currentDate = new Date();
        
        console.log('Early checkout data:', {
            bookingId,
            guestName,
            checkInText: cells.eq(4).text().trim(),
            checkOutText: cells.eq(5).text().trim(),
            checkInDate,
            currentCheckOutDate
        });
        
        // Format dates for display
        const formattedCurrentCheckOut = currentCheckOutDate.toLocaleDateString('en-US', {
            month: 'short',
            day: 'numeric',
            year: 'numeric'
        });

        // Calculate nights based on the current check-out date (which accounts for extensions)
        const totalNights = parseInt(cells.eq(6).text().trim());
        const actualNights = Math.max(1, Math.ceil((currentDate - checkInDate) / (1000 * 60 * 60 * 24)));

        // Get payment details
        const totalAmount = parseFloat(cells.eq(9).text().replace('₱', '').replace(/,/g, '')); // Total Amount
        const paymentOption = cells.eq(10).text().trim(); // Payment Option column
        const amountPaid = parseFloat(cells.eq(11).text().replace('₱', '').replace(/,/g, '')); // Amount Paid

        // Calculate amounts based on payment option
        let newAmountDue = 0;

        if (paymentOption.toLowerCase() === 'downpayment') {
            // For downpayment option: Customer pays half of total original amount
            newAmountDue = totalAmount * 0.5;
        } else {
            // For full payment: No refund policy applies
            newAmountDue = totalAmount;
        }

        // Calculate remaining balance
        const remainingBalance = Math.max(0, newAmountDue - amountPaid);

        // Set values in modal
        $('#earlyCheckoutBookingId').val(bookingId);
        $('#earlyCheckoutGuestName').val(guestName);
        $('#originalCheckOutDate').val(formattedCurrentCheckOut);
        $('#newCheckOutDate').val(new Date().toLocaleDateString('en-US', {
            month: 'short',
            day: 'numeric',
            year: 'numeric'
        }));
        $('#originalNights').val(totalNights);
        $('#actualNights').val(actualNights);
