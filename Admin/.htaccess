# Regular redirection rules
RewriteEngine On

# If accessing the root URL, redirect to Customer/aa/index.php
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ Customer/aa/index.php [R=302,L]

# Allow access to existing files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Ensure proper PHP handling
<FilesMatch "\.php$">
    Require all granted
</FilesMatch> 
